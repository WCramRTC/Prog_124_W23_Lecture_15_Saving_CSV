            <Label Content="Grade" Canvas.Left="52" Canvas.Top="107" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="txtGrade" Canvas.Left="52" TextWrapping="Wrap" Canvas.Top="138" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="btnSaveGrade" Content="Save Grade" Canvas.Left="47" Canvas.Top="197" Height="44" Width="232" Click="btnSaveGrade_Click"/>
        </Canvas>
        <Button x:Name="btnSaveList" Content="Save List" Canvas.Left="495" Canvas.Top="261" Height="45" Width="164" Click="btnSaveList_Click"/>

    </Canvas>
</Window>
